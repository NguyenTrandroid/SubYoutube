<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/custom_background_dialog">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/dp300"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/red"
            android:textSize="@dimen/dp20"
            android:layout_marginTop="@dimen/dp10"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:text="Thay đổi lượt đăng kí"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="@dimen/dp5"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/tru"
                android:id="@+id/iv_tru"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp30" />
            <TextView
                android:textColor="@color/red"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/dp20"
                android:id="@+id/tv_thay_doi"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:background="@drawable/custom_button_white"/>
            <ImageView
                android:src="@drawable/cong"
                android:id="@+id/iv_cong"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp30" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <Button
                android:layout_marginRight="@dimen/dp5"
                android:id="@+id/bt_thaydoi"
                android:layout_width="@dimen/dp110"
                android:layout_height="@dimen/dp30"
                android:background="@drawable/custom_button_red"
                android:fontFamily="@font/avant_garde_bold"
                android:text="Cập nhật"
                android:textStyle="bold"
                android:textSize="@dimen/dp20"
                android:textColor="@color/white" />

            <Button
                android:layout_marginLeft="@dimen/dp5"
                android:id="@+id/bt_cancel"
                android:layout_width="@dimen/dp110"
                android:layout_height="@dimen/dp30"
                android:background="@drawable/custom_button_black"
                android:fontFamily="@font/avant_garde_bold"
                android:text="HỦY BỎ"
                android:textStyle="bold"
                android:textSize="@dimen/dp20"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>