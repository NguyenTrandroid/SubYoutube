<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/custom_background_dialog">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/dp360"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:textColor="@color/red"
            android:textSize="@dimen/dp20"
            android:layout_marginTop="@dimen/dp20"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:text="Gỡ bỏ kênh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginTop="@dimen/dp20"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <Button
                android:layout_marginRight="@dimen/dp5"
                android:layout_width="@dimen/dp70"
                android:layout_height="@dimen/dp35"
                android:id="@+id/bt_thaydoi"
                android:background="@drawable/custom_button_red"
                android:fontFamily="@font/avant_garde_bold"
                android:text="CÓ"
                android:textSize="@dimen/dp20"
                android:textColor="@color/white" />

            <Button
                android:layout_marginLeft="@dimen/dp5"
                android:layout_width="@dimen/dp70"
                android:layout_height="@dimen/dp35"
                android:textSize="@dimen/dp20"
                android:id="@+id/bt_cancel"
                android:background="@drawable/custom_button_black"
                android:fontFamily="@font/avant_garde_bold"
                android:text="HỦY"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>