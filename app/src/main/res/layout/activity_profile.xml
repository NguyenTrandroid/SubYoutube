<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Profile.ProfileActivity">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:src="@drawable/ic_back" />

    <ImageView
        android:id="@+id/iv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp70"
        app:srcCompat="@drawable/welcome" />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_info"
        android:layout_above="@id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp400"
        android:layout_below="@id/iv_welcome"
        android:layout_margin="@dimen/dp30"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="@dimen/dp20"
        app:cardElevation="@dimen/dp10">

        <RelativeLayout
            android:id="@+id/rl_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_avata"
                android:layout_width="@dimen/dp120"
                android:layout_height="@dimen/dp120"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp25"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/tv_nameProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_avata"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp10"
                android:text="ICT Team"
                android:textColor="#000"
                android:textSize="@dimen/sp20"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp2"
                android:layout_below="@id/tv_nameProfile"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginRight="@dimen/dp15"
                android:src="@color/gray" />

            <TextView
                android:id="@+id/tv_tongdiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_line"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp10"
                android:text="TỔNG ĐIỂM HIỆN CÓ"
                android:textColor="#000"
                android:textSize="@dimen/sp20" />

            <TextView
                android:id="@+id/tv_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_tongdiem"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp30"
                android:text="0"
                android:textColor="@color/red"
                android:textSize="@dimen/sp23" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_tongdiem"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginTop="@dimen/dp30"
                android:layout_toRightOf="@id/tv_coin"
                android:src="@drawable/ic_dollar" />

            <ImageView
                android:id="@+id/iv_line1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp2"
                android:layout_below="@id/tv_coin"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginTop="@dimen/dp25"
                android:layout_marginRight="@dimen/dp15"
                android:src="@color/gray" />

            <RelativeLayout
                android:id="@+id/rl_history"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:layout_below="@id/iv_line1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp20"
                    android:text="LỊCH SỬ ĐĂNG KÍ"
                    android:textSize="@dimen/sp20" />
                <ImageView
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_line2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp2"
                android:layout_below="@id/rl_history"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp15"
                android:src="@color/gray" />

            <RelativeLayout
                android:id="@+id/rl_contacadmin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:layout_below="@id/iv_line2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp20"
                    android:text="LIÊN HỆ ADMIN"
                    android:textSize="@dimen/sp20" />
                android:textSize="@dimen/sp20" />
                <ImageView
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <ImageView
                android:id="@+id/iv_line3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp2"
                android:layout_below="@id/rl_contacadmin"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp15"
                android:src="@color/gray" />
            <TextView
                android:id="@+id/tv_logout"
                android:textStyle="bold"
                android:textSize="@dimen/sp20"
                android:layout_marginBottom="@dimen/dp20"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/red"
                android:text="ĐĂNG XUẤT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </RelativeLayout>
        <RelativeLayout
            android:visibility="invisible"
            android:id="@+id/rl_history1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_history"
                android:layout_marginBottom="@dimen/dp2"
                android:layout_centerVertical="true"
                android:layout_above="@id/rl_clear"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>


            <RelativeLayout
                android:id="@+id/rl_clear"
                android:layout_centerVertical="true"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50">
                <TextView
                    android:id="@+id/tv_clear"
                    android:textSize="@dimen/sp25"
                    android:textColor="@color/red"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="XÓA LỊCH SỬ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/iv_back_red"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_back_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>


        </RelativeLayout>



    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/tv_title"
        android:layout_marginBottom="@dimen/dp50"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp20"
        android:src="@drawable/info" />


</RelativeLayout>