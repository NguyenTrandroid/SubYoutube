<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_background_dialog">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/dp200"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/red"
            android:textSize="@dimen/dp12"
            android:layout_marginTop="@dimen/dp10"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:text="Thêm kênh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:layout_gravity="center"
            android:text="Địa chỉ kênh:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_marginTop="@dimen/dp3"
            android:id="@+id/ed_input"
            android:layout_width="@dimen/dp150"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_button_black"
            android:fontFamily="@font/avant_garde"
            android:gravity="center" />

        <LinearLayout
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <Button
                android:layout_marginRight="@dimen/dp5"
                android:id="@+id/bt_thaydoi"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp20"
                android:background="@drawable/custom_button_red"
                android:fontFamily="@font/avant_garde_bold"
                android:text="OK"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <Button
                android:layout_marginLeft="@dimen/dp5"
                android:id="@+id/bt_cancel"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp20"
                android:background="@drawable/custom_button_black"
                android:fontFamily="@font/avant_garde_bold"
                android:text="HỦY"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>